<%= form_for(rent_house) do |f| %>
  <% if rent_house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rent_house.errors.count, "error") %> 保存に失敗しました:</h2>

      <ul>
      <% rent_house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rent_name, "物件名" %><br>
    <%= f.text_field :rent_name %>
  </div>

  <div class="field">
    <%= f.label :charge, "賃料" %><br>
    <%= f.number_field :charge %>円
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age, "築年数" %><br>
    <%= f.number_field :age %>年
  </div>


  <div class="field">
    <%= f.label :note, "備考" %><br>
    <%= f.text_area :note %>
  </div>

  <hr>

  <% i = 1 %>
  <%= f.fields_for :stations do |df| %>
    <h4>最寄り駅<%= i %></h4>
    <%= df.label :route_name, "路線名" %><br>
    <%= df.text_field :route_name %><br>
    <%= df.label :station_name, "駅名" %><br>
    <%= df.text_field :station_name %><br><br>
    <%= df.label :walking_min, "徒歩分数" %><br>
    <%= df.number_field :walking_min %>分<br>
    <% i += 1 %>
  <% end %>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
