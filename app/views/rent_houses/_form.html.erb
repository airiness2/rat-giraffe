<%= form_for(rent_house) do |f| %>
  <% if rent_house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rent_house.errors.count, "error") %> 保存に失敗しました:</h2>

      <ul>
      <% rent_house.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rent_name %>
    <%= f.text_field :rent_name %>
  </div>

  <div class="field">
    <%= f.label :charge %>
    <%= f.number_field :charge %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>


  <div class="field">
    <%= f.label :note %>
    <%= f.text_field :note %>
  </div>

  <hr>

  <%= f.fields_for :stations do |s| %>
  <div class="field">
    <%= s.label :route_name %>
    <%= s.text_field :route_name %>
  </div>
  <div class="field">
    <%= s.label :station_name %>
    <%= s.text_field :station_name %>
  </div>
  <div class="field">
    <%= s.label :walking_min %>
    <%= s.number_field :walking_min %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
