<p id="notice"><%= notice %></p>

<h1>一覧</h1>
<hr>
<div class="contents">
<h3>物件一覧</h3>
<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rent_houses.each do |rent_house| %>
      <tr>
        <td class="list_1"><%= rent_house.rent_name %></td>
        <td class="list_1"><%= rent_house.charge %>円</td>
        <td class="list_2"><%= rent_house.address %></td>
        <td class="list_3"><%= rent_house.age %>年</td>
        <td class="list_4"><%= rent_house.note %></td>
        <td><%= link_to '詳細', rent_house %></td>
        <td><%= link_to '編集', edit_rent_house_path(rent_house) %></td>
        <td><%= link_to '削除', rent_house, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '物件を登録する', new_rent_house_path %>

</div>
